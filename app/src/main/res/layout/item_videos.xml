<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="4dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:id="@+id/audio_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img"
                    android:layout_toRightOf="@+id/img"
                    android:layout_toEndOf="@+id/img">

                    <TextView

                        android:text="Track 1"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" />

                    <TextView

                        android:text="Artist"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="Album"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/audio_2"
                android:layout_below="@id/audio_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Track 2"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="Artist"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="Album"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/audio_3"
                android:layout_below="@id/audio_2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img3"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Track 3"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="Artist"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="Album"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/audio_4"
                android:layout_below="@id/audio_3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img4"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Track 4"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="Artist"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="Album"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/audio_5"
                android:layout_below="@id/audio_4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Track 5"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="Artist"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="Album"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>








        </LinearLayout>

    </ScrollView>
</RelativeLayout>